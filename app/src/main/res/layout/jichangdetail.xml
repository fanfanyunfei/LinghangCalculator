<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/jichangname_detail_textview"
        android:text="机场名字："/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/jichangname_detail_edittext"
        android:textSize="30sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/qifeifangxiang_detail_textview"
        android:text="起飞方向："/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/qifeifangxiang_dongxi_detail_checkbox"
            android:text="东—西"
            android:textSize="30sp"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/qifeifangxiang_nanbei_detail_checkbox"
            android:text="南—北"
            android:textSize="30sp"/>

    </RadioGroup>



    <!--<CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/qifeifangxiang_dongxi_detail_checkbox"
        android:text="东—西"
        android:textSize="30sp"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/qifeifangxiang_nanbei_detail_checkbox"
        android:text="南—北"
        android:textSize="30sp"/>-->



    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/qifeifangxiang_xi_detail_checkbox"
        android:text="西"
        android:textSize="30sp"
        android:visibility="gone"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/qifeifangxiang_bei_detail_checkbox"
        android:text="北"
        android:textSize="30sp"
        android:visibility="gone"/>
</LinearLayout>