<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#cfdced">

        <TextView
            android:id="@+id/jichang_text_view"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.5"
            android:background="@drawable/lable_bg"
            android:gravity="center"
            android:text="机场："
            android:textSize="15sp"
            android:layout_margin="2dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.5"
            android:background="@drawable/lable_bg"
            android:gravity="center"
            android:text="起飞方向："
            android:textSize="15sp"
            android:layout_margin="2dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.5"
            android:background="@drawable/lable_bg"
            android:layout_margin="2dp"
            android:gravity="center"
            android:text="航线："
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.5"
            android:background="@drawable/lable_bg"
            android:gravity="center"
            android:text="目标航点："
            android:textSize="15sp"
            android:layout_margin="2dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.5"
            android:background="@drawable/lable_bg"
            android:gravity="center"
            android:text="是否增速："
            android:textSize="15sp"
            android:layout_margin="2dp"/>

        <TextView
            android:id="@+id/buchangshijian_text_view"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.5"
            android:background="@drawable/lable_bg"
            android:gravity="center"
            android:text="补偿时间："
            android:textSize="15sp"
            android:layout_margin="2dp"/>







    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#cfdced">

        <Spinner
            android:id="@+id/jichang_spinner"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:background="#cfdced"
            android:gravity="center"
            android:textSize="20sp"
            android:spinnerMode="dropdown"/>

        <Spinner
            android:id="@+id/qifeifangxiang_spinner"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:background="#cfdced"
            android:gravity="center"
            android:textSize="20sp"
            android:spinnerMode="dropdown"/>

        <Spinner
            android:id="@+id/hangxian_spinner"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:background="#cfdced"
            android:gravity="center"
            android:textSize="20sp"
            android:spinnerMode="dropdown"/>

        <Spinner
            android:id="@+id/hangdian_spinner"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:background="#cfdced"
            android:gravity="center"
            android:textSize="20sp"
            android:spinnerMode="dropdown"/>

        <Spinner
            android:id="@+id/shifoutuji_spinner"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:background="#cfdced"
            android:gravity="center"
            android:textSize="20sp"
            android:entries="@array/shifoutuji"
            android:spinnerMode="dropdown"/>

        <Button
            android:id="@+id/buchangshijian_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:textSize="20sp"
            android:background="#cfdced"
            android:gravity="center"

            android:text="0"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/background_dark"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f7dbc8">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="时间误差："
            android:textSize="15px" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="应飞地速："
            android:textSize="15px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f7dbc8">
        <TextView
            android:id="@+id/shijianwucha_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:textSize="40px" />
        <TextView
            android:id="@+id/yingfeidisu_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:textSize="40px" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="目标预达时刻："
        android:textSize="15px"
        android:background="#f7dbc8"/>
    <TextView
        android:id="@+id/mubiaoyudashike_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="50px"
        android:textColor="@android:color/black"
        android:background="#f7dbc8"/>










    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/daifeiju_lable_text_view"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1.5"
            android:text="待飞距："
            android:textSize="20px"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/daifeiju_text_view"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:textSize="35px"
            android:textColor="@android:color/black"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/daifeishi_lable_text_view"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1.5"
            android:text="待飞时："
            android:textSize="20px"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/daifeishi_text_view"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:textSize="35px"
            android:textColor="@android:color/black"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/yudashike_lable_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="预达时刻："
            android:textSize="20px"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/yudashike_text_view"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:textSize="35px"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/disu_lable_text_view"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1.5"
            android:text="地速："
            android:textSize="20px"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/disu_text_view"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:textSize="35px"
            android:textColor="@android:color/black"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/weidu_lable_text_view"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1.5"
            android:text="纬度："
            android:textSize="20px"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/weidu_text_view"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:textSize="35px"
            android:textColor="@android:color/black"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/jingdu_lable_text_view"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1.5"
            android:text="经度："
            android:textSize="20px"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/jingdu_text_view"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:textSize="35px"
            android:textColor="@android:color/black"
            android:visibility="gone"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="起飞时刻："
            android:textSize="20px" />
        <TextView
            android:id="@+id/qifeishike_text_view"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:textSize="35px"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1.5"
            android:text="卫星时间："
            android:textSize="20px" />
        <TextView
            android:id="@+id/weixingshijian_text_view"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:textSize="35px"
            android:textColor="@android:color/black"/>

    </LinearLayout>


    <Button
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:id="@+id/xianshixiangxi_button"
        android:text="显示详细"
        android:textSize="20px"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_bg_yuanjiao" />
    <Button
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:id="@+id/yincangxiangxi_button"
        android:text="隐藏详细"
        android:textSize="20px"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_bg_yuanjiao"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/background_dark"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TextView_GpsInfo"
            android:visibility="gone" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/hangdianname_textview"
                android:text="航点"
                android:textSize="20sp"
                android:layout_weight="1"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/hangdianweidu_textview"
                android:text="纬度"
                android:textSize="20sp"
                android:layout_weight="1"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/hangdianjingdu_textview"
                android:text="经度"
                android:textSize="20sp"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/hangdianzhunshi_textview"
                android:text="准时"
                android:textSize="20sp"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/yudashikebiaozhun_textview"
                android:text="预达时刻"
                android:textSize="20sp"
                android:layout_weight="1"
                android:gravity="center"/>
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hangdianinfo_listview">
        </ListView>
    </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="4.2"
        android:id="@+id/sheqifeishi_button"
        android:text="设起飞时"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="bottom"
        android:background="#00000000" />
    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/jishi_button"
        android:text="起飞计时"
        android:textSize="30sp"
        android:background="@drawable/btn_bg_circle"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/chongzhi_button"
        android:text="计时复位"
        android:textSize="30sp"
        android:background="@drawable/btn_bg_red_circle"
        android:visibility="gone"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="2"
        android:id="@+id/shezhi_button"
        android:text="设置"
        android:textSize="20sp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="2.5dp"
        android:background="#00000000"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="2"
        android:id="@+id/mubiaotuisuan_button"
        android:text="目标推算"
        android:textSize="20sp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="2.5dp"
        android:layout_marginRight="5dp"
        android:background="#00000000" />

</LinearLayout>




</LinearLayout>
