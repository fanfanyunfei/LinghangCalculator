            android:layout_weight="1"
            android:id="@+id/zhunshi_nan_detail_edittext"
            android:textSize="20sp"
            android:maxLines="1"
            android:maxLength="8"
            android:inputType="number"
            android:digits="0123456789: "/>
        <CheckBox
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/tujizhunshi_nan_detail_checkbox"
            android:text="突击准时"
            android:textSize="20sp"
            android:textColor="@android:color/holo_green_dark"
            android:visibility="gone"/>
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/tujizhunshi_nan_detail_textview"
            android:textSize="20sp"
            android:text="突击准时："/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tujizhunshi_nan_detail_edittext"
            android:textSize="20sp"
            android:maxLines="1"
            android:maxLength="8"
            android:inputType="number"
            android:digits="0123456789 :"/>
    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/qifeifangxiang_xi_detail_tv"
            android:text="向西起飞"
            android:textSize="20sp"
            android:textColor="@android:color/holo_blue_dark"
