            android:visibility="gone"/>
        <TextView
            android:layout_width="0px"
            android:layout_height="50dp"
            android:id="@+id/hangxian_textview"
            android:text="航线名称"
            android:textSize="30sp"
            android:layout_weight="1"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>